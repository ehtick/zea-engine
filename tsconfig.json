{
  "compilerOptions": {
    "outDir": "./tsc-output",
    "allowJs": true,
    "target": "es5",
    //"strict": true,
    //"module": "commonjs",
    //"noImplicitAny": false, // ts will infer the type of “any” where no types are defined
    //"strictNullChecks": false // false -> ts ignores null/undefined
    //"esModuleInterop": true,
    //"skipLibCheck": true,

  },
  "include": [
    //"./src/**/*"
    "./src/math/*",
    "@types/**/*.d.ts",
  ],  
  "exclude": [
    "./node_modules",
    "**/*.test.ts", // is it better to keep tests as .js?
    "**/*.test.js", // for migration
    "**/*.spec.ts",
    "dist"
  ]
}

