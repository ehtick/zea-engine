{
  "compilerOptions": {
    "target": "ES2015" /* Specify ECMAScript target version: 'ES3' (default), 'ES5', 'ES2015', 'ES2016', 'ES2017', 'ES2018', 'ES2019', 'ES2020', 'ES2021', or 'ESNEXT'. */,
    "module": "es2015" /* Specify module code generation: 'none', 'commonjs', 'amd', 'system', 'umd', 'es2015', 'es2020', or 'ESNext'. */,
    "allowJs": true /* Allow javascript files to be compiled. */,
    "outDir": "./tsc-output" /* Redirect output structure to the directory. */,
    "resolveJsonModule": true,
    // "strict": true /* Enable all strict type-checking options. */,
    "skipLibCheck": true, // this should be removed when a build is working.
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "downlevelIteration": true,
    "moduleResolution": "node" /* Specify module resolution strategy: 'node' (Node.js) or 'classic' (TypeScript pre-1.6). */,
    "esModuleInterop": true /* Enables emit interoperability between CommonJS and ES Modules via creation of namespace objects for all imports. Implies 'allowSyntheticDefaultImports'. */,
    "sourceMap": true,
    "inlineSources": true
  },
  "include": ["./src/**/*", "@types/**/*.d.ts"],
  "exclude": [
    "./node_modules",
    "**/*.test.ts",
    "**/*.test.js" // for migration
  ]
}
